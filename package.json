{
  "name": "AstroApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "react-native run-android",
    "ios": "cd ios && open astroapp.xcworkspace",
    "warning-clean-up": "echo '\\033[1;33m Please, uninstall the app from your phone or destroy the emulator\n\\033[0m'",
    "reinstall-npm-modules": "npm cache clean && rm -rf node_modules && yarn install",
    "clear:ios": "cd ios && rm -rf build",
    "clear:watchman": "watchman watch-del-all",
    "hyper-clean": "npm run warning-clean-up && npm run watchman:clear && npm run ios:clean && rm -rf $TMPDIR/react-* && npm run reinstall-npm-modules && npm run android:gradle-clean && react-native link",
    "android:gradle-clean": "cd android && ./gradlew clean",
    "android:reverse-ports": "adb reverse tcp:8081 tcp:8081 && adb reverse tcp:3000 tcp:3000",
    "android:release:generate": "cd android && ./gradlew assembleRelease",
    "android:release:install": "cd android && adb install app/build/outputs/apk/app-release.apk",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@shoutem/ui": "^0.9.1",
    "babel-preset-react-native": "^1.9.0",
    "color": "^0.11.3",
    "immutable": "^3.8.1",
    "lodash": "^4.16.4",
    "moment": "^2.15.1",
    "react": "^15.3.2",
    "react-komposer": "^1.13.1",
    "react-native": "^0.36.0",
    "react-native-drawer": "^2.3.0",
    "react-native-keyboard-aware-scroll-view": "^0.2.1",
    "react-native-loading-spinner-overlay": "^0.3.0",
    "react-native-meteor": "^1.0.1",
    "react-native-navbar": "^1.5.4",
    "react-native-router-flux": "^3.36.0",
    "react-native-spinkit": "^0.1.3",
    "react-native-vector-icons": "^2.1.0",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-saga": "^0.12.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react-native": "^1.9.0",
    "babel-root-import": "^4.1.3",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.0",
    "flow-bin": "^0.34.0",
    "jest": "^16.0.2",
    "jest-react-native": "^16.1.0",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-native-mock": "^0.2.7",
    "react-test-renderer": "^15.3.2",
    "wd": "^1.0.0"
  },
  "jest": {
    "preset": "jest-react-native"
  }
}
